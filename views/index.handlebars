<h1>Burgers</h1>

<h2>Burgers that have not been devoured</h2>

<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
	<div>
		{{this.burger_name}}
		<form action="/api/burgers/{{this.id}}" method="PUT">
			<button type="submit" class='burgerAvailable'> Click to Devour!</button>
		</form>
	</div>
	{{/unless}}
	{{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
	{{#each burgers}}
	{{#if this.devoured}}
	<div class='burgerEaten'>
		<div>
			{{this.burger_name}}
		</div>
	</div>
	{{/if}}
	{{/each}}
</ul>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/api/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>